{
  "extends": "airbnb",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "quotes": ["error", "single",
      {
        "allowTemplateLiterals": true
      }],
    "indent": ["error", 4],
    "import/no-unresolved": [0, {"commonjs": true, "amd": true}],
    "class-methods-use-this": [0]
  }
}
